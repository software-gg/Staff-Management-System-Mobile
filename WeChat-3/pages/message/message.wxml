<view class='space'></view>
<view class = 'normal'>
<view class='type' bindtap='apply'>【{{list[0].name}}】{{list[0].time}}{{list[0].type}}已通过</view>
<view class='status'>{{list[0].time}}{{list[0].type}}{{list[0].message}}</view>
<view class='small'>{{list[0].issue}}</view>
</view>
<view class = 'normal'>
<view class='type' bindtap='unpass'>【{{list[1].name}}】{{list[1].time}}{{list[1].type}}未通过</view>
<view class='status'> {{list[1].time}}{{list[1].type}}{{list[1].message}}</view>
