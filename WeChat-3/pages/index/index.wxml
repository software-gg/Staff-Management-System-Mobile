<view class="container">
  <view class='image-item'>
    <image src='../../image/dragon.jpg ' class='ig'></image>
  </view>
  <!-- <view class=' pad'></view> -->
  <view class='login-item'>
    <view class='login-item-info'>学号</view>
    <view class='login-pwd'>
      <input style="flex-grow:1" bindinput='useridInput' maxlength='15'/>
    </view>
  </view>
  <view class="login-item">
    <view class='login-item-info'>姓名</view>
    <view>
      <input bindinput='usernameInput' />
    </view>
  </view>
  <view class='item'>
    <view class='login-item'>
      <view class='login-item-info'>班级</view>
      <view class='login-pwd'>
        <input style="flex-grow:1" bindinput='userclassInput' />
      </view>
    </view>
    <!-- <view class=' pad'></view> -->
    <view class='login-item'>
      <button open-type='getUserInfo' class='login-bin' type='primary' bindgetuserinfo='loginBtnClick'>登录</button>
    </view>
  </view>
</view>